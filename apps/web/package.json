{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"app/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,css}\"",
    "spell": "cspell \"app/**/*.{ts,tsx}\"",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm spell && pnpm knip",
    "fix": "pnpm lint:fix && pnpm format && pnpm knip:fix",
    "prepare": "cd ../.. && git rev-parse --git-dir > /dev/null 2>&1 && cd - && lefthook install || echo 'Git not initialized - skipping lefthook install'",
    "pre-commit": "lefthook run pre-commit",
    "clean": "rm -rf dist build .react-router node_modules/.vite"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.18.0",
    "@vanilla-extract/recipes": "^0.5.7",
    "clsx": "^1.2.1",
    "radix-ui": "^1.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.13.0"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.19.4",
    "@eslint/js": "^9.39.2",
    "@react-router/dev": "^7.13.0",
    "@react-router/node": "^7.13.0",
    "@types/node": "^25.2.1",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vanilla-extract/vite-plugin": "^5.1.4",
    "cspell": "^8.19.4",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^15.15.0",
    "knip": "^5.83.1",
    "lefthook": "^1.13.6",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  }
}
