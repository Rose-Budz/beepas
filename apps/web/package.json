{
  "name": "web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"app/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,css}\"",
    "spell": "cspell \"app/**/*.{ts,tsx}\"",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check && pnpm spell && pnpm knip",
    "fix": "pnpm lint:fix && pnpm format && pnpm knip:fix",
    "prepare": "cd ../.. && git rev-parse --git-dir > /dev/null 2>&1 && cd - && lefthook install || echo 'Git not initialized - skipping lefthook install'",
    "pre-commit": "lefthook run pre-commit",
    "clean": "rm -rf dist build .react-router node_modules/.vite"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.13.0",
    "@vanilla-extract/css": "^1.16.0",
    "@vanilla-extract/recipes": "^0.5.0",
    "@vanilla-extract/sprinkles": "^1.6.0",
    "@vanilla-extract/dynamic": "^2.1.0",
    "@vanilla-extract/css-utils": "^0.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@react-router/dev": "^7.13.0",
    "@react-router/node": "^7.13.0",
    "@vanilla-extract/vite-plugin": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^6.0.5",
    "lefthook": "^1.10.0",
    "knip": "^5.0.0",
    "cspell": "^8.0.0"
  }
}
